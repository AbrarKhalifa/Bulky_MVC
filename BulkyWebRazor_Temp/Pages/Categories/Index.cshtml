@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">

            <h2 class="text-primary">
                Category List
            </h2>

        </div>

        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Category
            </a>
        </div>

    </div>


    <table class="table table-striped table-bordered">
        <thead>
            <tr>

                <th>Category Name</th>
                <th>Display Order</th>
            </tr>
        </thead>

        @foreach (var item in Model.category.OrderBy(x => x.DisplayOrder))
        {
            <tbody>

                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">

                            <a asp-route-id="@item.Id" asp-page="/Categories/Edit" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>

                            <a asp-route-id="@item.Id" asp-page="/Categories/Delete" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i>
                                Delete
                            </a>
                        </div>

                    </td>
                </tr>

            </tbody>
        }


    </table>

</div>

